<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/no_images"
        android:background="@android:color/background_two"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/no_pictures_image"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/ic_no_image"
            android:layout_width="@dimen/no_pictures_image"
            android:layout_height="@dimen/no_pictures_image"
        />

        <TextView
            android:layout_below="@id/no_pictures_image"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/image_gallery_NoImageView_text"
            android:textColor="@color/white_color"
            android:textSize="@dimen/noSource_size"
        />
</RelativeLayout>
