<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camera="http://schemas.android.com/apk/res/com.ingenic.glass.camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" 
    android:id="@+id/frame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/camera_mode_page_hight"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dot" />

            <TextView
                android:id="@+id/video_preview_select_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/camera_mode_page_magin_bottom"
                android:text="@string/image_preview_info"
                android:textColor="@color/camera_select_mode_text"
                android:textSize="@dimen/noSource_size" />

            <TextView
                android:id="@+id/video_preview_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/camera_mode_page_magin_bottom"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/video_preview_select_info"
                android:text="@string/video_preview__info"
                android:textColor="@color/camera_default_mode_text"
                android:textSize="@dimen/noSource_size" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>